<?xml version="1.0" encoding="UTF-8"?>
<window id="mainWindow" title="Notepad - LuaUI" width="800" height="600">
    <!-- 菜单栏 -->
    <menu id="mainMenu">
        <menuitem id="menuFile" text="File">
            <menuitem id="menuNew" text="New"/>
            <menuitem id="menuOpen" text="Open..."/>
            <menuitem id="menuSave" text="Save"/>
            <menuitem id="menuSaveAs" text="Save As..."/>
            <separator/>
            <menuitem id="menuExit" text="Exit"/>
        </menuitem>
        <menuitem id="menuEdit" text="Edit">
            <menuitem id="menuUndo" text="Undo"/>
            <menuitem id="menuRedo" text="Redo"/>
            <separator/>
            <menuitem id="menuCut" text="Cut"/>
            <menuitem id="menuCopy" text="Copy"/>
            <menuitem id="menuPaste" text="Paste"/>
            <separator/>
            <menuitem id="menuSelectAll" text="Select All"/>
        </menuitem>
        <menuitem id="menuFormat" text="Format">
            <menuitem id="menuFont" text="Font..."/>
            <menuitem id="menuWordWrap" text="Word Wrap"/>
        </menuitem>
        <menuitem id="menuHelp" text="Help">
            <menuitem id="menuAbout" text="About..."/>
        </menuitem>
    </menu>
    
    <!-- 工具栏 -->
    <toolbar id="mainToolBar" x="0" y="0" width="800" height="28">
        <toolbutton id="btnNew" text="New" icon="new.png"/>
        <toolbutton id="btnOpen" text="Open" icon="open.png"/>
        <toolbutton id="btnSave" text="Save" icon="save.png"/>
        <separator/>
        <toolbutton id="btnCut" text="Cut" icon="cut.png"/>
        <toolbutton id="btnCopy" text="Copy" icon="copy.png"/>
        <toolbutton id="btnPaste" text="Paste" icon="paste.png"/>
    </toolbar>
    
    <!-- 编辑器 -->
    <edit id="editText" multiline="true" x="0" y="28" width="800" height="550"/>
    
    <!-- 状态栏 -->
    <statusbar id="mainStatusBar" x="0" y="578" width="800" height="22">
        <pane text="Ready" width="200"/>
        <pane text="Ln 1, Col 1" width="150"/>
        <pane text="UTF-8" width="100"/>
    </statusbar>
</window>
