<?xml version="1.0" encoding="UTF-8"?>
<!-- LuaUI XML Layout - 声明式事件绑定示例 -->
<!-- Click 属性将自动绑定到代码中的对应方法 -->
<StackPanel xmlns="http://luaui.io/schema"
            xmlns:x="http://luaui.io/schema/x"
            x:Name="rootPanel"
            Spacing="10"
            Margin="10">
    
    <!-- Header -->
    <Border Background="#2196F3" 
            Padding="20,15"
            Margin="0,0,0,10">
        <StackPanel Orientation="Horizontal" Spacing="20">
            <TextBlock x:Name="titleText"
                      Text="XML Layout System"
                      FontSize="28"/>
            <Button x:Name="settingsBtn"
                   Text="Settings"
                   Click="OnSettings"
                   SetStateColors="#1976D2,#1565C0,#0D47A1"
                   Padding="15,8"/>
        </StackPanel>
    </Border>
    
    <!-- Toolbar -->
    <Border Background="White"
            Padding="10"
            Margin="0,0,0,10"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button x:Name="newBtn"
                   Text="New"
                   Click="OnNewClick"
                   SetStateColors="#4CAF50,#43A047,#2E7D32"
                   Padding="12,6"
                   Width="80"/>
            
            <Button x:Name="openBtn"
                   Text="Open"
                   Click="OnOpenClick"
                   SetStateColors="#FF9800,#F57C00,#E65100"
                   Padding="12,6"
                   Width="80"/>
            
            <Button x:Name="saveBtn"
                   Text="Save"
                   Click="OnSaveClick"
                   SetStateColors="#2196F3,#1976D2,#0D47A1"
                   Padding="12,6"
                   Width="80"/>
            
            <Button x:Name="searchBtn"
                   Text="Search"
                   Click="OnSearchClick"
                   SetStateColors="#9E9E9E,#757575,#424242"
                   Padding="12,6"/>
        </StackPanel>
    </Border>
    
    <!-- Content -->
    <Border Background="White"
            Padding="20"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <StackPanel Spacing="15">
            <!-- Welcome -->
            <Border Background="#E8F5E9" 
                   Padding="15"
                   BorderBrush="#C8E6C9"
                   BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Welcome to XML Layout!"
                              FontSize="20"/>
                    <TextBlock Text="This UI is loaded from XML with declarative event binding."
                              FontSize="13"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Form -->
            <StackPanel>
                <TextBlock Text="Username" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="usernameBox" Padding="10,8"/>
            </StackPanel>
            
            <StackPanel>
                <TextBlock Text="Email" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="emailBox" Padding="10,8"/>
            </StackPanel>
            
            <StackPanel>
                <TextBlock Text="Bio" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="bioBox" Height="80" Padding="10,8"/>
            </StackPanel>
            
            <!-- Progress -->
            <StackPanel>
                <TextBlock Text="Profile Completion" FontSize="13"/>
                <ProgressBar x:Name="profileProgress"
                            Value="65"
                            Maximum="100"
                            Height="8"
                            Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Volume -->
            <StackPanel>
                <TextBlock Text="Volume" FontSize="13"/>
                <Slider x:Name="volumeSlider"
                       Minimum="0"
                       Maximum="100"
                       Value="75"
                       Height="30"
                       ValueChanged="OnVolumeChanged"/>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Spacing="10"
                       Margin="0,10,0,0">
                <Button x:Name="resetBtn"
                       Text="Reset"
                       Click="OnResetClick"
                       SetStateColors="#F5F5F5,#E0E0E0,#BDBDBD"
                       Padding="20,10"
                       Width="100"/>
                
                <Button x:Name="cancelBtn"
                       Text="Cancel"
                       Click="OnCancelClick"
                       SetStateColors="White,#F5F5F5,#E0E0E0"
                       Padding="20,10"
                       Width="100"/>
                
                <Button x:Name="submitBtn"
                       Text="Save Changes"
                       Click="OnSubmitClick"
                       SetStateColors="#4CAF50,#43A047,#2E7D32"
                       Padding="20,10"
                       Width="120"/>
            </StackPanel>
        </StackPanel>
    </Border>
    
    <!-- Footer -->
    <Border Background="#424242"
            Padding="15,10">
        <TextBlock x:Name="statusText"
                  Text="Ready"
                  FontSize="12"
                  Foreground="#BDBDBD"/>
    </Border>
</StackPanel>
