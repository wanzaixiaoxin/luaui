<?xml version="1.0" encoding="UTF-8"?>
<!-- LuaUI XML Layout - Main Window (Simplified) -->
<StackPanel xmlns="http://luaui.io/schema"
            xmlns:x="http://luaui.io/schema/x"
            x:Name="rootPanel"
            Spacing="10"
            Margin="10">
    
    <!-- Header Section -->
    <Border Background="#2196F3" 
            Padding="20,15"
            Margin="0,0,0,10">
        <StackPanel Orientation="Horizontal" Spacing="20">
            <TextBlock x:Name="titleText"
                      Text="XML Layout System"
                      FontSize="28"
                      Foreground="White"/>
            <Button x:Name="settingsBtn"
                   SetStateColors="#1976D2,#1565C0,#0D47A1"
                   Padding="15,8"/>
        </StackPanel>
    </Border>
    
    <!-- Toolbar Section -->
    <Border Background="White"
            Padding="10"
            Margin="0,0,0,10"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button x:Name="newBtn"
                   SetStateColors="#4CAF50,#43A047,#2E7D32"
                   Padding="12,6"
                   Width="80"/>
            
            <Button x:Name="openBtn"
                   SetStateColors="#FF9800,#F57C00,#E65100"
                   Padding="12,6"
                   Width="80"/>
            
            <Button x:Name="saveBtn"
                   SetStateColors="#2196F3,#1976D2,#0D47A1"
                   Padding="12,6"
                   Width="80"/>
            
            <Button x:Name="searchBtn"
                   SetStateColors="#9E9E9E,#757575,#424242"
                   Padding="12,6"/>
        </StackPanel>
    </Border>
    
    <!-- Content Area -->
    <Border Background="White"
            Padding="20"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <StackPanel Spacing="15">
            <!-- Welcome Section -->
            <Border Background="#E8F5E9" 
                   Padding="15"
                   BorderBrush="#C8E6C9"
                   BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Welcome to XML Layout!"
                              FontSize="20"
                              Foreground="#2E7D32"/>
                    <TextBlock Text="This UI is loaded from XML configuration."
                              FontSize="13"
                              Foreground="#388E3C"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Form Section -->
            <StackPanel>
                <TextBlock Text="Username" FontSize="13" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="usernameBox"
                        Padding="10,8"/>
            </StackPanel>
            
            <StackPanel>
                <TextBlock Text="Email" FontSize="13" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="emailBox"
                        Padding="10,8"/>
            </StackPanel>
            
            <StackPanel>
                <TextBlock Text="Bio" FontSize="13" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="bioBox"
                        Height="80"
                        Padding="10,8"/>
            </StackPanel>
            
            <!-- Progress Section -->
            <StackPanel>
                <TextBlock Text="Profile Completion" FontSize="13" Foreground="#555"/>
                <ProgressBar x:Name="profileProgress"
                            Value="65"
                            Maximum="100"
                            Height="8"
                            Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Volume Section -->
            <StackPanel>
                <TextBlock Text="Volume" FontSize="13" Foreground="#555"/>
                <Slider x:Name="volumeSlider"
                       Minimum="0"
                       Maximum="100"
                       Value="75"
                       Height="30"/>
            </StackPanel>
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Spacing="10"
                       Margin="0,10,0,0">
                <Button x:Name="resetBtn"
                       SetStateColors="#F5F5F5,#E0E0E0,#BDBDBD"
                       Padding="20,10"
                       Width="100"/>
                
                <Button x:Name="cancelBtn"
                       SetStateColors="White,#F5F5F5,#E0E0E0"
                       Padding="20,10"
                       Width="100"/>
                
                <Button x:Name="submitBtn"
                       SetStateColors="#4CAF50,#43A047,#2E7D32"
                       Padding="20,10"
                       Width="120"/>
            </StackPanel>
        </StackPanel>
    </Border>
    
    <!-- Footer -->
    <Border Background="#424242"
            Padding="15,10">
        <StackPanel>
            <TextBlock x:Name="statusText"
                      Text="Ready"
                      FontSize="12"
                      Foreground="#BDBDBD"/>
        </StackPanel>
    </Border>
</StackPanel>
