<?xml version="1.0" encoding="UTF-8"?>
<StackPanel xmlns="http://luaui.io/schema"
            xmlns:x="http://luaui.io/schema/x"
            Margin="20"
            Spacing="10"
            Background="White">
    
    <!-- 简单的标题 -->
    <Border Background="#2196F3" 
            Padding="20,15"
            Margin="0,0,0,10">
        <TextBlock Text="Simple Header"
                  FontSize="24"
                  Foreground="White"/>
    </Border>
    
    <!-- 按钮测试 -->
    <Button x:Name="testBtn"
           Content="Test Button"
           SetStateColors="#4CAF50,#43A047,#2E7D32"
           Padding="15,8"
           Width="150"/>
    
    <!-- 输入框 -->
    <TextBox x:Name="testBox"
            Placeholder="Enter text here..."
            Padding="10,8"/>
    
    <!-- 进度条 -->
    <ProgressBar x:Name="testProgress"
                Value="65"
                Height="20"/>
    
</StackPanel>
